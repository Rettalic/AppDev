<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TamagotchiFinal.Kitchen"
             BackgroundImageSource="Kitchen.png" >
    <ContentPage.Content>
        <StackLayout>
                     <ProgressBar ProgressColor="Green"  ScaleY="2"  Progress="{Binding Hunger,      Mode=OneWay}"></ProgressBar>
                     <ProgressBar ProgressColor="Green"  ScaleY="2"  Progress="{Binding Thirst,      Mode=OneWay}"></ProgressBar>

            <Button Text="Get Food" Clicked="ButtonFood" HeightRequest="50"></Button>
            <Button Text="Get Drink" Clicked="ButtonThirst" HeightRequest="50"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>